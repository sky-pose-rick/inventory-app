extends layout 

block content 
  h1= title 

  p Name: #{item.name}
  p Description: #{item.description}

  form(method='POST' action='')
    label Authorization Password: 
        input(type='password' name='authorization_password' required='true')
    button(type='submit') Confirm Item Deletion
  if errors 
    ul 
      for error in errors 
        li=error.msg