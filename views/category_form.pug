extends layout 

block content 
  h1= title 

  form(method='POST' action='')
    label Name: 
      input(type='text' placeholder='Name of category' required='true' name='name' value=(category===undefined ? '': category.name))
    label Descritpion
      textarea(type='textarea' placeholder='Desciption of category' required='true' name='description' value=(category===undefined ? '': category.description))
    button(type='submit') Submit
  if errors 
    ul 
      for error in errors 
        li=error.msg