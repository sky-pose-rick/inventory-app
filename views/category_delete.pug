extends layout 

block content 
  h1= title 

  p Name: #{category.name}
  p Description: #{category.description}

  if (items.length > 0) 
    p This category has items. Delete those first.
    ul#linkcollection 
      for item in items
        li.categoryrow 
          a(href=item.url) #{item.name}
  else
    form(method='POST' action='')
      label Authorization Password: 
        input(type='password' name='authorization_password' required='true')
      button(type='submit') Confirm Category Deletion
  if errors 
    ul 
      for error in errors 
        li=error.msg
  p 
    a.extralink(href=category.detail_url) Back to Category Details
  p
    a.extralink(href=category.item_list_url) Back to Item List