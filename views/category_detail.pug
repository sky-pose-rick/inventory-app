extends layout 

block content 
  h1= title 
  p Name: #{category.name}
  p Description: #{category.description}
  p 
    a(href=category.item_list_url) See items
  p
    a(href=`/inventory/item/${category._id}/create`) Create New Item
  p
    a(href=category.detail_url+'/delete') Delete Category
  p
    a(href=category.detail_url+'/update') Update Category
  img(src=`/data/uploads/${category.image_path}` alt='no icon')
